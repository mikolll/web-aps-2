<h1>New Post</h1>

<%= form_with :model => @post do |form| %>

  <p>
    <%= form.label "author" %>
    <%= form.text_field "author" %>
    <%= form.label "body" %>
    <%= form.text_field "body" %>
    <%= form.label "image" %>
    <%= form.text_field "image" %>
  </p>

  <%= form.submit %>
<% end %>